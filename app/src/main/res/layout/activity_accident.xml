<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    >

    <!-- Image at the top showing the accident -->
    <ImageView
        android:id="@+id/ivAccidentImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/accident" />

    <!-- TextView for the accident message -->
    <TextView
        android:id="@+id/tvAccidentMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivAccidentImage"
        android:layout_marginTop="16dp"
        android:text="You were afraid and ran back to the road. Unfortunately, a car hit you, and you died in the accident."
        android:textSize="18sp"
        android:textColor="#FF0000"
        android:fontFamily="@font/merriweather"
        android:textAlignment="center"
        android:lineSpacingExtra="6dp"
        android:paddingHorizontal="16dp"
        android:maxHeight="200dp"
        android:scrollbars="vertical"
        android:overScrollMode="always" />

    <!-- Button for logging out -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textColor="@color/old_paper"
        android:textStyle="bold"
        android:fontFamily="@font/merriweather"
        android:backgroundTint="@color/button_bronze"
        android:layout_below="@id/tvAccidentMessage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp" />
</RelativeLayout>
